for file in *; do
  mkdir -p output
  if [ -f "$file" ]; then
    INFO=$(mediainfo $file)
    if [ -z "$(echo $INFO | grep -io "Format *: *JPEG")" ]; then
      continue;
    fi
    WIDTH="$(echo $INFO | grep -io "Width[^:]*[^p]*" | grep -o "[0-9]" | tr -d '\n')"
    HEIGHT="$(echo $INFO | grep -io "Height[^:]*[^p]*" | grep -o "[0-9]" | tr -d '\n')"
    if [ "$WIDTH" -gt 1500 ] || [ "$HEIGHT" -gt 1500 ]; then
      echo "Processing $file"
      convert -resize 1500 $file output/$file
    else
      cp -v $file output/$file
    fi
  fi
done
